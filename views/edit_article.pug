extends layout

block content
  h1 #{title}
  form(method='POST', action='/editArticle/'+article._id)
    #form-group
      label Title:
      input.form-control(name='title', type='text', value=article.title)
    #form-group
      label Description:
      textarea.form-control(name='description')= article.description
    br
    input.btn.btn-primary(type='submit',value='Submit')